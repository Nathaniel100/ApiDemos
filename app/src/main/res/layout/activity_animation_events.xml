<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/animation_events_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical"
    tools:context="cn.com.cfca.mobile.apidemos.animation.AnimationEvents"
    >

    <Switch
        android:id="@+id/end_immediately_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_immediately"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:text="@string/play"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/play"
            />
        <Button
            android:text="@string/cancel"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/cancel"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            />
        <Button
            android:text="@string/end"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/end"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sequencer Events: "
            android:textAppearance="@style/AppTextAppearance.Label"
            />
        <TextView
            android:id="@+id/animation_sequencer_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/start"
            android:textAppearance="@style/AppTextAppearance.NotPassed"
            />
        <TextView
            android:id="@+id/animation_sequencer_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repeat"
            android:textAppearance="@style/AppTextAppearance.NotPassed"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            />
        <TextView
            android:id="@+id/animation_sequencer_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textAppearance="@style/AppTextAppearance.NotPassed"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            />
        <TextView
            android:id="@+id/animation_sequencer_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end"
            android:textAppearance="@style/AppTextAppearance.NotPassed"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animator Events: "
            android:textAppearance="@style/AppTextAppearance.Label"
            />
        <TextView
            android:id="@+id/animation_animator_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:textAppearance="@style/AppTextAppearance.NotPassed"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            />
        <TextView
            android:id="@+id/animation_animator_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repeat"
            android:textAppearance="@style/AppTextAppearance.NotPassed"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            />
        <TextView
            android:id="@+id/animation_animator_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textAppearance="@style/AppTextAppearance.NotPassed"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            />
        <TextView
            android:id="@+id/animation_animator_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end"
            android:textAppearance="@style/AppTextAppearance.NotPassed"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            />
    </LinearLayout>


</LinearLayout>
